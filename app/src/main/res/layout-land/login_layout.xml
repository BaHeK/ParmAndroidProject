<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#ffffff">

        <!--  Header Starts-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background1"
            style="@style/AppTheme"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Пользователь"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="35dp" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/userName"
                android:layout_gravity="center"
                android:background="@drawable/rounded_edittext"
                android:gravity="center_vertical|bottom"
                android:paddingLeft="15dp"
                android:autoText="false"
                android:textSize="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Пароль"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:singleLine="false"
                android:textSize="35dp" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/userPassword"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/rounded_edittext"
                android:paddingLeft="15dp"
                android:textSize="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ППР"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true"
                android:textSize="35dp" />

            <Spinner
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerPpr"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_dropdown" />

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Сервер"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:textSize="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="451dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp" />

                <Spinner
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinnerServers"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_dropdown"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:id="@+id/btnCheckServer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:layout_toEndOf="@+id/spinnerServers"
                    android:layout_marginLeft="28dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/spinnerServers"
                    android:background="@drawable/selector_refresh_btn" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id='@+id/btnAddServer'
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/btnCheckServer"
                    android:layout_toEndOf="@+id/btnCheckServer"
                    android:layout_marginLeft="56dp"
                    android:background="@drawable/selector_add_btn" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/btnDelServer"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf='@+id/btnAddServer'
                    android:layout_toEndOf='@+id/btnAddServer'
                    android:layout_marginLeft="23dp"
                    android:background="@drawable/selector_del_btn" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnOk"
                    android:background="@drawable/selector_btn"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="30dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnCancel"
                    android:background="@drawable/seelctor_btn_exit"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
